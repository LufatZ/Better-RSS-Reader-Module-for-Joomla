<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
    <name>MOD_RSS_READER</name>
    <author>LufatZ | OxFaTech</author>
    <authorEmail>support@oxfatech.de</authorEmail>
    <authorUrl>https://oxfatech.de</authorUrl>
    <version>1.0.0</version>
    <creationDate>30.06.2024</creationDate>
    <license>Proprietary</license>
    <copyright>Copyright (c) 2024 OxFaTech</copyright>
    <description>MOD_RSS_READER_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_rss_reader">mod_rss_reader.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <folder>config</folder>
        <filename>LICENSE.txt</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/mod_rss_reader.ini</language>
        <language tag="en-GB">language/en-GB/mod_rss_reader.sys.ini</language>
        <language tag="de-DE">language/de-DE/mod_rss_reader.ini</language>
        <language tag="de-DE">language/de-DE/mod_rss_reader.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="rssurl"
                    type="url"
                    label="MOD_RSS_READER_FIELD_RSSURL_LABEL"
                    filter="url"
                    required="true"
                    validate="url"
                />
                
                <field
                    name="show_feed_title"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="MOD_RSS_READER_FIELD_SHOW_FEED_TITLE_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>

                <field
                    name="show_feed_image"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="MOD_RSS_READER_FIELD_SHOW_FEED_IMAGE_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                
                <field
                    name="show_feed_description"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="MOD_RSS_READER_FIELD_SHOW_FEED_DESCRIPTION_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>

                <field
                    name="item_count"
                    type="number"
                    label="MOD_RSS_READER_FIELD_ITEM_COUNT_LABEL"
                    default="10"
                    filter="integer"
                    min="1"
                    validate="number"
                />
                
                <field
                    name="show_item_title"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="MOD_RSS_READER_FIELD_SHOW_ITEM_TITLE_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>

                <field
                    name="show_item_image"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="MOD_RSS_READER_FIELD_SHOW_ITEM_IMAGE_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>

                <field
                    name="show_item_description"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="MOD_RSS_READER_FIELD_SHOW_ITEM_DESCRIPTION_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                
                <field
                    name="word_count"
                    type="number"
                    label="MOD_RSS_READER_FIELD_WORD_COUNT_LABEL"
                    description="MOD_RSS_READER_FIELD_WORD_COUNT_DESC"
                    default="0"
                    filter="integer"
                />

                <field
                    name="show_item_date"
                    type="radio"
                    label="MOD_RSS_READER_FIELD_SHOW_ITEM_DATE_LABEL"
                    layout="joomla.form.field.radio.switcher"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                
                <field type="spacer" name="item_additional_fields_spacer" hr="true"/>
                
				<field
				    name="item_additional_fields_label"
				    type="note"
				    label="MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_EXPLANATION_label"
				    heading="h3"
				/>
				<field
				    name="item_additional_fields_desc"
				    type="note"
				    label="MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_EXPLANATION_DESC"
				    heading="h4"
				    class="alert alert-info"
				/>
				<field
					name="item_additional_fields"
					type="subform"
					multiple="true"
					min="0"
					>
					<form>
						<field
							name="tag_name"
							type="text"
							label="MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_TAG"
							default="&lt;example&gt;"
						/>
						<field name="tag_option" type="list" default="" required="true" label="MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION_LABEL" description="">
							<option value="">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_SELECT</option>
							<option value="0">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION0</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION1</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION2</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION3</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION4</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION5</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION6</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION7</option>
							<option value="1">MOD_RSS_READER_FIELD_ITEM_ADDITIONAL_FIELDS_OPTION8</option>
						</field>
					</form>
				</field>

            </fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
